import math

class Circulo:
    def __init__(self, radio):
        self.radio = radio
    
    def area(self):
        return math.pi * self.radio ** 2

if __name__ == '__main__':
    circulo1 = Circulo(5)
    circulo2 = Circulo(10)
    print(f"Área del círculo 1: {circulo1.area()}")
    print(f"Área del círculo 2: {circulo2.area()}")
