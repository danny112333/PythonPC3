#OPERACIONES
def suma(a, b):
    try:
        return a + b
    except TypeError:
        return "Error: Tipo de dato no v치lido."

def resta(a, b):
    try:
        return a - b
    except TypeError:
        return "Error: Tipo de dato no v치lido."

def producto(a, b):
    try:
        return a * b
    except TypeError:
        return "Error: Tipo de dato no v치lido."

def division(a, b):
    try:
        return a / b
    except TypeError:
        return "Error: Tipo de dato no v치lido."
    except ZeroDivisionError:
        return "Error: No es posible dividir entre cero."

#RESULTADOS 
import operaciones

if __name__ == '__main__':
    print(operaciones.suma(10, 5))
    print(operaciones.resta(10, 5))
    print(operaciones.producto(10, 5))
    print(operaciones.division(10, 0))
